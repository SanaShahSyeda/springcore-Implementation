<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<context:annotation-config/>

    <bean class="com.springautowiring.annotations.Address" name="address1">
        <property name="street" value="3F" />
        <property name="city" value="Los angeles"/>
    </bean>

    <bean class="com.springautowiring.annotations.Address" name="address2">
        <property name="street" value="EE-D" />
        <property name="city" value="London"/>
    </bean>

    <bean class="com.springautowiring.annotations.employee" name="employee"/>
</beans>